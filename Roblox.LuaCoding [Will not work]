
local KillBlock = script.Parent
 
local function onTouch(otherPart)
    -- Attempts to find a parent which is a model
    local model = otherPart:FindFirstAncestorWhichIsA("Model")
    
    if model then
        -- Attempts to find a humanoid part on the model
        local human = model:FindFirstChildWhichIsA("Humanoid")
     
        if human then
            -- Kills the player
            human.Health = 0
        end
    end
end
 
-- Attached the function to the block when it is touched
KillBlock.Touched:Connect(onTouch)
